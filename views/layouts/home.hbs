<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

</head>

<body>
    <div class="container-fluid">
        {{{body}}}
        <div class="row" style="margin-top:10px">
            <div class="col-sm-2  rounded-3 ">
                <div class="text-center shadow-sm p-2 bg-body rounded ">
                    <label for="" class="fw-bold fs-5">Chức Năng</label>
                </div>
                <div class="scroll-view" style="max-height: 500px; overflow: auto;">
                    <nav class="navbar">
                        <div class="container-fluid">
                            <ul class="navbar-nav">
                                <div class="accordion" id="accordionExample">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="headingOne">
                                            <button class="accordion-button me-3" type="button"
                                                data-bs-toggle="collapse" data-bs-target="#collapseOne"
                                                aria-expanded="true" aria-controls="collapseOne">
                                                Thêm Sản Phẩm
                                            </button>
                                        </h2>
                                        <div id="collapseOne" class="accordion-collapse collapse show"
                                            aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <a class="nav-link" href="/addProduct"><i class="fas fa-plus"></i> Thêm
                                                    Sản
                                                    Phẩm</a>
                                                <a class="nav-link" href="/addNhanvien"><i class="fas fa-plus"></i> Thêm
                                                    Nhân
                                                    Viên</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <li class="nav-item">
                                    <a class="nav-link" href="/acount"><i class="fas fa-user"></i> Quản lý tài khoản</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/hoadon"><i class="fas fa-credit-card"></i> Thanh toán hóa
                                        đơn</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="col-sm-10 mh-100">
                {{#if search}} <div class="text-center fw-bold fs-4 mt-1">
                    <p>Danh Sách Tìm Kiếm</p>
                </div>
                <table class="table table-bordered rounded">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Hình ảnh</th>
                            <th>Màu Sắc</th>
                            <th>Loại sản phẩm</th>
                            <th>Chức Năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each search}}
                        <tr>
                            <td>1</td>
                            <td>{{this.name}}</td>
                            <td>{{this.price}}</td>
                            <td>
                                <div class="col-sm-5 mt-5">
                                    <img src="{{this.image}}" class="mx-auto d-block rounded"
                                        style="width:90%;height: 97%;">
                                </div>
                            </td>
                            <td>{{this.color}}</td>
                            <td>{{this.type}}</td>
                            <td class="d-flex">
                                <button class="btn btn-primary m-1"
                                    onclick="window.location.href='/update/{{this._id}}?name={{this.name}}&price={{this.price}}&image={{this.image}}&color={{this.color}}&type={{this.type}}'">Sửa</button>
                                <button type="button" class="btn btn-danger m-1" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal" data-bs-whatever="{{this._id}}">Xóa</button>
                                <form action="/showProduct" method="post" enctype="multipart/form-data"> <input
                                        type="hidden" class="form-control m-1" id="hello"
                                        placeholder="Change new password" name="hello" value="{{this._id}}">
                                    <button class="btn btn-primary m-1" type="submit"><i
                                            class="bi bi-eye-fill"></i></button>
                                </form>
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Xóa Sản Phẩm</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                bạn có muốn xóa sản phẩm này đi không
                                            </div>
                                            <div class="modal-footer">
                                                <form action="/delete" method="post" class="m-1">
                                                    <input type="hidden" class="form-control m-1" id="hello"
                                                        placeholder="Change new password" name="hello">
                                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                                </form>
                                                <button type="button" class="btn btn-primary"
                                                    data-bs-dismiss="modal">Hủy</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

            </div>
            </td>
            </tr>

            {{/each}}
            </tbody>
            </table>
            {{else}}
            <div class="text-center fw-bold fs-4 mt-1">
                <p>Danh Sách Sản Phẩm</p>
            </div>
            <table class="table table-hover shadow-sm p-5 mb-5 bg-body rounded">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Hình ảnh</th>
                        <th>Màu Sắc</th>
                        <th>Loại sản phẩm</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each product}}
                    <tr>
                        <td>{{order}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}</td>
                        <td>
                            <div class="col-sm-5">
                                <img src="{{this.image}}" class="mx-auto d-block rounded"
                                    style="width:60px;height:50px;">
                            </div>
                        </td>
                        <td>{{this.color}}</td>
                        <td>{{this.type}}</td>
                        <td class="d-flex mt-1">
                            <button class="btn btn-primary m-1"
                                onclick="window.location.href='/update/{{this._id}}?name={{this.name}}&price={{this.price}}&image={{this.image}}&color={{this.color}}&type={{this.type}}'">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button type="button" class="btn btn-danger m-1" data-bs-toggle="modal"
                                data-bs-target="#exampleModal" data-bs-whatever="{{this._id}}">
                                <i class="bi bi-file-x-fill"></i>
                            </button>
                            <form action="/showProduct" method="post" enctype="multipart/form-data"> <input
                                    type="hidden" class="form-control m-1" id="hello" placeholder="Change new password"
                                    name="hello" value="{{this._id}}">
                                <button class="btn btn-primary m-1" type="submit"><i
                                        class="bi bi-eye-fill"></i></button>
                            </form>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                                aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Xóa Sản Phẩm</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            bạn có muốn xóa sản phẩm này đi không
                                        </div>
                                        <div class="modal-footer">
                                            <form action="/delete" method="post" class="m-1">
                                                <input type="hidden" class="form-control m-1" id="hello"
                                                    placeholder="Change new password" name="hello">
                                                <button type="submit" class="btn btn-danger">Xóa</button>
                                            </form>
                                            <button type="button" class="btn btn-primary"
                                                data-bs-dismiss="modal">Hủy</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

        </div>
        </td>
        </tr>

        {{/each}}
        </tbody>
        </table>
        {{/if}}

    </div>
    </div>
    </div>
    <script>
        var exampleModal = document.getElementById('exampleModal')

        exampleModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget
            var recipient = button.getAttribute('data-bs-whatever')
            var modalBodyInput = exampleModal.querySelector('.modal-footer input')
            modalBodyInput.value = recipient
        })
    </script>
    <footer class="bg-light py-3 fixed-bottom">
        <div class="container d-flex justify-content-center align-items-center flex-column">
            <p class="text-muted mb-0">Nguyễn Văn Chính PH23300</p>
            <a href="/home" class="link-secondary">Quay về trang chủ</a>
        </div>
    </footer>
</body>

</html>